.hero
	min-height: 50vh

	background-size: cover
	background-position: center

	makeGrid(1fr)
	align-items: center
	justify-items: center

	addTransparentBackgroundOverlay(0.4)

	.content
		text-align: center
		text-transform: uppercase
		padding-top: 2em
		padding-bottom: @padding-top

		@media (min-width: $tablet-breakpoint)
			font-size: 1.25em
